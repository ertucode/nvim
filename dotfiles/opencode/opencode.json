{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "messages_first": "<leader>u"
  },
  "agent": {
    "plan": {
      "permission": {
        "bash": {
          "*": "ask",
          "git status": "allow",
          "git status *": "allow",
          "git log *": "allow",
          "git diff": "allow",
          "git diff *": "allow",
          "git show *": "allow",
          "echo *": "allow",
          "ls -la *": "allow",
          "find *": "allow",
          "npx nx show *": "allow",
          "npx tsc *": "allow",
          "yarn list *": "allow",
          "rg *": "allow"
        }
      },
      "tools": {
        "grep": true,
        "glob": true
      }
    }
  }
}
